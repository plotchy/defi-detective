            if (_mintoption == 1) //Mint to Owner
            {
                _safeMint(owner(), tokenIds_[i]);
            }
            if (_mintoption == 2) //Mint to User
            {
                _safeMint(_to, tokenIds_[i]);
            }
        }
    }
